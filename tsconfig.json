{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["es2017"],
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"asmr": ["./src/"],
			"asmr/*": ["./src/*"],
			"asmr-assets": ["./assets/"],
			"asmr-assets/*": ["./assets/*"],
			"asmr-mobile": ["./"],
			"asmr-mobile/*": ["./*"]
		},
		"strict": true,
		"target": "esnext",
		"typeRoots": ["./node_modules/@types", "./types"],
		"useDefineForClassFields": true
	},
	"exclude": [
		"node_modules",
		"babel.config.json",
		"metro.config.js",
		"jest.config"
	]
}
